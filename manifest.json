{
  "manifest_version" : 2,

  "name" : "Systole",
  "description" : "This extension prompts the user with a multiple choice question when visiting potentially distracting sites.",
  "version" : "0.2",
  "author" : "Jennings Zhang",

  "background" : {
    "scripts" : ["background.js"],
    "persistent" : false
  },

  "page_action" : {
    "default_icon" : "icons/bad-squid.png",
    "default_title" : "Systole",
    "default_popup" : "popup.html"        
   },

   "icons" : {"48": "icons/bad-squid48.png"},

  "permissions": [

    "declarativeContent",
    "storage"
  ]
}
