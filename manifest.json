{
  "manifest_version": 2,
  "name": "Mind Matter",
  "description": "An educational chrome extension, not a waste of time. Prompts you with a trivia question popup before visiting a distracting site.",
  "version": "0.2",
  "minimum_chrome_version": "42",
  "author": "Jennings Zhang",
  "background": {
    "scripts": [
      "ext/js/functions.js",
      "ext/js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/brain-in-pot16.png",
    "default_title": "Mind Matter",
    "default_popup": "ext/ui/popup.html"
  },
  "options_page": "ext/ui/options",
  "options_ui": {
    "page": "ext/ui/options/index.html",
    "chrome_style": false
  },
  "icons": {
    "16": "assets/brain-in-pot16.png",
    "32": "assets/brain-in-pot32.png",
    "128": "assets/brain-in-pot128.png"
  },
  "permissions": [
    "storage",
    "https://jennydaman.github.io/mindmatter/*",
    "tabs",
    "<all_urls>",
    "notifications"
  ]
}
